{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
        <button type="submit" form="form-superbar" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
      <h1>{{ heading_title }}</h1>
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb['href'] }}">{{ breadcrumb['text'] }}</a></li>
        {% endfor %}
      </ul>
    </div>
  </div>
  <div class="container-fluid">
    {% if (error_warning) %}
    <div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    {% if (success) %}
    <div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}
      <button type="button" class="close" data-dismiss="alert">&times;</button>
    </div>
    {% endif %}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-superbar" class="form-horizontal">
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-status">{{ entry_status }}</label>
            <div class="col-sm-10">
              <select name="module_superbar_status" id="input-status" class="form-control">
                {% if (superbar_status) %}
                <option value="1" selected="selected">{{ text_enabled }}</option>
                <option value="0">{{ text_disabled }}</option>
                {% else %}
                <option value="1">{{ text_enabled }}</option>
                <option value="0" selected="selected">{{ text_disabled }}</option>
                {% endif %}
              </select>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-superbar-width">{{ entry_superbar_width }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="number" name="superbar_width" value="{{ superbar_width }}" placeholder="" id="input-superbar-width" class="form-control float_number" />
                <span class="input-group-addon"><i>px</i></span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-superbar-color">{{ entry_superbar_color }}</label>
            <div class="col-sm-10">
              <div class="input-group colorpicker">
                <span class="input-group-addon"><i></i></span>
                <input type="text" name="superbar_color" value="{{ superbar_color }}" placeholder="" id="input-superbar-color" class="form-control" />
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-design-layout">{{ entry_design_layout }}</label>
            <div class="col-sm-10">
                <a href="" id="thumb-design-layout" data-toggle="image" class="img-thumbnail">
                  <img src="{{ design_layout_placeholder }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                </a>
                <input type="hidden" name="superbar_design_layout_icon" value="{{ superbar_design_layout_icon }}" id="input-design-layout" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-border-color">{{ entry_border_color }}</label>
            <div class="col-sm-10">
              <div class="input-group colorpicker">
                <span class="input-group-addon"><i></i></span>
                <input type="text" name="superbar_border_color" value="{{ superbar_border_color }}" placeholder="" id="input-border-color" class="form-control" />
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-border-style">{{ entry_border_style }}</label>
            <div class="col-sm-10">
              <select name="superbar_border_style" id="input-border-style" class="form-control">
                {% for style in border_styles %}
                  {% if (superbar_border_style == style) %}
                    <option value="{{ style }}" selected="selected">{{ style|capitalize }}</option>
                  {% else %}
                    <option value="{{ style }}">{{ style|capitalize }}</option>
                  {% endif %}
                {% endfor %}
              </select>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-button-color">{{ entry_button_color }}</label>
            <div class="col-sm-10">
              <div class="input-group colorpicker">
                <span class="input-group-addon"><i></i></span>
                <input type="text" name="superbar_button_color" value="{{ superbar_button_color }}" placeholder="" id="input-button-color" class="form-control" />
              </div>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-superbar-position">{{ entry_superbar_position }}</label>
            <div class="col-sm-10">
              <div class="col-sm-3">
                <select class="form-control" name="superbar_position_hori">
                  {% if (superbar_position_hori) %}
                    <option value="1" selected="selected">{{ "top" }}</option>
                    <option value="0">{{ "bottom" }}</option>
                  {% else %}
                    <option value="1">{{ "top" }}</option>
                    <option value="0" selected="selected">{{ "bottom" }}</option>
                  {% endif %}
                </select>
              </div>
              <div class="col-sm-3">
                <div class="input-group">
                  <input type="number" name="superbar_hori" value="{{ superbar_hori }}" placeholder="" id="input-hori" class="form-control int_number" />
                  <span class="input-group-addon"><i>%</i></span>
                </div>
              </div>
              <div class="col-sm-3">
                <select class="form-control" name="superbar_position_verti">
                  {% if (superbar_position_verti) %}
                    <option value="1" selected="selected">{{ "left" }}</option>
                    <option value="0">{{ "right" }}</option>
                  {% else %}
                    <option value="1">{{ "left" }}</option>
                    <option value="0" selected="selected">{{ "right" }}</option>
                  {% endif %}
                </select>
              </div>
              <div class="col-sm-3 required">
                <div class="input-group">
                  <input type="number" name="superbar_verti" value="{{ superbar_verti }}" placeholder="" id="input-verti" class="form-control int_number" />
                  <span class="input-group-addon"><i>%</i></span>
                </div>
              </div>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-superbar-time">{{ entry_superbar_time }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="text" name="superbar_time" value="{{ superbar_time }}" placeholder="" id="input-superbar-time" class="form-control" />
                <span class="input-group-addon"><i>seconds</i></span>
              </div>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-superbarcontent-time">{{ entry_superbarcontent_time }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="number" name="superbar_content_time" value="{{ superbar_content_time }}" placeholder="" id="input-superbarcontent-time" class="form-control int_number" />
                <span class="input-group-addon"><i>seconds</i></span>
              </div>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-superbarstruck-time">{{ entry_superbarstruck_time }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="number" name="superbar_struck_time" value="{{ superbar_struck_time }}" placeholder="" id="input-superbarstruck-time" class="form-control int_number" />
                <span class="input-group-addon"><i>seconds</i></span>
              </div>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-icon-width">{{ entry_icon_width }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="number" class="form-control int_number" value="{{ superbar_icon_width }}" name="superbar_icon_width" id="input-icon-width">
                <span class="input-group-addon"><i>px</i></span>
              </div>
            </div>
          </div>
          <div class="form-group required">
            <label class="col-sm-2 control-label" for="input-icon-height">{{ entry_icon_height }}</label>
            <div class="col-sm-10">
              <div class="input-group">
                <input type="number" class="form-control int_number" value="{{ superbar_icon_height }}" name="superbar_icon_height" id="input-icon-height">
                <span class="input-group-addon"><i>px</i></span>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-upsell-icon">{{ entry_upsell_icon }}</label>
            <div class="col-sm-10">
                <a href="" id="thumb-upsell-icon" data-toggle="image" class="img-thumbnail">
                  <img src="{{ upsell_placeholder }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                </a>
                <input type="hidden" name="superbar_upsell_icon" value="{{ superbar_upsell_icon }}" id="input-upsell-icon" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-upsell-tooltip">{{ entry_upsell_tooltip }}</label>
            <div class="col-sm-10">
              {% for language in languages %}
                <div class="input-group" style="margin-bottom:2px;"><span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /> {{ language['name'] }}</span>
                  <input type="text" name="superbar_upsell_tooltip[{{ language['language_id'] }}]" placeholder="{{ entry_upsell_tooltip }}" id="input-upsell-tooltip" class="form-control" value="{{ superbar_upsell_tooltip[language['language_id']] is defined ? superbar_upsell_tooltip[language['language_id']] : '' }}" />
                </div>
              {% endfor %}
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-crosssell-icon">{{ entry_crosssell_icon }}</label>
            <div class="col-sm-10">
                <a href="" id="thumb-crosssell-icon" data-toggle="image" class="img-thumbnail">
                  <img src="{{ crosssell_placeholder }}" alt="" title="" data-placeholder="{{ placeholder }}" />
                </a>
                <input type="hidden" name="superbar_crosssell_icon" value="{{ superbar_crosssell_icon }}" id="input-crosssell-icon" />
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label" for="input-crosssell-tooltip">{{ entry_crosssell_tooltip }}</label>
            <div class="col-sm-10">
              {% for language in languages %}
                <div class="input-group" style="margin-bottom:2px;"><span class="input-group-addon"><img src="language/{{ language['code'] }}/{{ language['code'] }}.png" title="{{ language['name'] }}" /> {{ language['name'] }}</span>
                  <input type="text" name="superbar_crosssell_tooltip[{{ language['language_id'] }}]" placeholder="{{ entry_crosssell_tooltip }}" id="input-crosssell-tooltip" class="form-control" value="{{ superbar_crosssell_tooltip[language['language_id']] is defined ? superbar_crosssell_tooltip[language['language_id']] : '' }}" />
                </div>
              {% endfor %}
            </div>
          </div>

        </form>
      </div>
    </div>
  </div>
</div>
<link href="view/javascript/color-picker/css/bootstrap-colorpicker.min.css" rel="stylesheet">
<script src="view/javascript/color-picker/js/bootstrap-colorpicker.min.js"></script>
<script type="text/javascript">
$(function(){
    $('.colorpicker').colorpicker();
});

$(document).ready(function() {
  $(document).on('keydown', ".int_number",function (e) {
      if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110]) !== -1 ||
          (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
          (e.keyCode >= 35 && e.keyCode <= 40)) {
               return;
      }
      if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
          e.preventDefault();
      }
  });

  $(document).on('keypress', ".float_number", function(event) {
    var flag = false;

    if(event.which == 46 && $(this).val() == ''){
      flag = true;
    }

    if((event.which < 48 || event.which > 57) && (event.which == 46 && $(this).val().indexOf('.') != -1) || ((event.which < 48 || event.which > 57) && event.which != 46)) {
      flag = true;
    }

    if(flag) {
      event.preventDefault();
    }
  });

  //Avoid to paste any type of value in these fileds
  $(document).on('paste', ".dimentions, .price, .weight, .quantity", function(event) {
    event.preventDefault();
  });
});
</script>

